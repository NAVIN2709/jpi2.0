{
  "phases": [
    {
      "name": "Problem Setup",
      "time": [0, 15],
      "objects": [
        {
          "type": "coordinate_system",
          "params": {
            "points": [
              {"x": 0, "y": 0, "label": "O", "color": "#ffffff"},
              {"x": 4, "y": 3, "label": "A", "color": "#ff6b6b"}
            ],
            "force": {
              "origin": [0, 0],
              "components": [4, 3],
              "color": "#ffd166"
            },
            "boxWidth": 600,
            "boxHeight": 600,
            "boxX": 120,
            "boxY": 80
          },
          "fadeIn": {"start": 0, "duration": 1}
        }
      ],
      "text": [
        {
          "value": "A particle of mass m = 2 kg is displaced by 5 m",
          "x": 0,
          "y": 3,
          "size": 28,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        },
        {
          "value": "Force: F = (3i + 4j) N acts on the particle",
          "x": 0,
          "y": 2.2,
          "size": 26,
          "color": "#cccccc",
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "value": "Displacement is along the direction of force",
          "x": 0,
          "y": 1.4,
          "size": 24,
          "color": "#aaaaaa",
          "fadeIn": {"start": 2, "duration": 1}
        },
        {
          "value": "Find: (A) Work done  (B) Kinetic energy change",
          "x": 0,
          "y": 0.6,
          "size": 24,
          "color": "#00ffcc",
          "fadeIn": {"start": 3, "duration": 1}
        }
      ],
      "math": []
    },
    {
      "name": "Force Magnitude & Direction",
      "time": [15, 30],
      "objects": [],
      "text": [
        {
          "value": "Step 1: Calculate magnitude of force",
          "x": 0,
          "y": 3,
          "size": 28,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        },
        {
          "value": "Unit vector along force direction",
          "x": 0,
          "y": 2.2,
          "size": 24,
          "color": "#aaaaaa",
          "fadeIn": {"start": 3, "duration": 1}
        }
      ],
      "math": [
        {
          "latex": "|\\vec{F}| = \\sqrt{3^2 + 4^2} = \\sqrt{9 + 16}",
          "x": 0,
          "y": 0.8,
          "color": "#00ffff",
          "targetHeight": 50,
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "latex": "|\\vec{F}| = \\sqrt{25} = 5 \\text{ N}",
          "x": 0,
          "y": -0.2,
          "color": "#00ffff",
          "targetHeight": 40,
          "fadeIn": {"start": 3, "duration": 1}
        },
        {
          "latex": "\\hat{F} = \\frac{3\\hat{i} + 4\\hat{j}}{5}",
          "x": 0,
          "y": -1.3,
          "color": "#ffff00",
          "targetHeight": 80,
          "fadeIn": {"start": 5, "duration": 1}
        }
      ]
    },
    {
      "name": "Displacement Vector",
      "time": [30, 45],
      "objects": [],
      "text": [
        {
          "value": "Step 2: Displacement in force direction",
          "x": 0,
          "y": 3,
          "size": 28,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        },
        {
          "value": "Total displacement = 5 m along F direction",
          "x": 0,
          "y": 2.2,
          "size": 24,
          "color": "#aaaaaa",
          "fadeIn": {"start": 2, "duration": 1}
        }
      ],
      "math": [
        {
          "latex": "\\vec{s} = 5 \\times \\frac{3\\hat{i} + 4\\hat{j}}{5}",
          "x": 0,
          "y": 0.8,
          "color": "#ffd166",
          "targetHeight": 80,
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "latex": "\\vec{s} = 3\\hat{i} + 4\\hat{j} \\text{ m}",
          "x": 0,
          "y": -0.3,
          "color": "#ffd166",
          "targetHeight": 40,
          "fadeIn": {"start": 3, "duration": 1}
        }
      ]
    },
    {
      "name": "Work Calculation",
      "time": [45, 60],
      "objects": [],
      "text": [
        {
          "value": "Step 3: Work done by the force",
          "x": 0,
          "y": 3,
          "size": 28,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        },
        {
          "value": "W = F · s (dot product of force and displacement)",
          "x": 0,
          "y": 2.2,
          "size": 24,
          "color": "#aaaaaa",
          "fadeIn": {"start": 2, "duration": 1}
        }
      ],
      "math": [
        {
          "latex": "W = \\vec{F} \\cdot \\vec{s} = (3\\hat{i} + 4\\hat{j}) \\cdot (3\\hat{i} + 4\\hat{j})",
          "x": 0,
          "y": 0.8,
          "color": "#ff6b6b",
          "targetHeight": 50,
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "latex": "W = 3 \\times 3 + 4 \\times 4 = 9 + 16",
          "x": 0,
          "y": -0.3,
          "color": "#ff6b6b",
          "targetHeight": 45,
          "fadeIn": {"start": 3, "duration": 1}
        },
        {
          "latex": "W = 25 \\text{ J}",
          "x": 0,
          "y": -1.4,
          "color": "#ffd93d",
          "targetHeight": 40,
          "fadeIn": {"start": 5, "duration": 1}
        }
      ]
    },
    {
      "name": "Kinetic Energy Change",
      "time": [60, 80],
      "objects": [],
      "text": [
        {
          "value": "Step 4: Change in kinetic energy",
          "x": 0,
          "y": 3,
          "size": 28,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        },
        {
          "value": "Work-Energy Theorem: ΔKE = W (net work)",
          "x": 0,
          "y": 2.2,
          "size": 24,
          "color": "#aaaaaa",
          "fadeIn": {"start": 2, "duration": 1}
        }
      ],
      "math": [
        {
          "latex": "\\Delta KE = W = 25 \\text{ J}",
          "x": 0,
          "y": 0.8,
          "color": "#00ffff",
          "targetHeight": 40,
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "latex": "\\frac{1}{2}mv^2 = 25 \\Rightarrow \\frac{1}{2}(2)v^2 = 25",
          "x": 0,
          "y": -0.3,
          "color": "#00ffff",
          "targetHeight": 80,
          "fadeIn": {"start": 3, "duration": 1}
        },
        {
          "latex": "v^2 = 25 \\Rightarrow v = 5 \\text{ m/s}",
          "x": 0,
          "y": -1.4,
          "color": "#00ffff",
          "targetHeight": 40,
          "fadeIn": {"start": 5, "duration": 1}
        }
      ]
    },
    {
      "name": "Final Answers",
      "time": [80, 100],
      "objects": [],
      "text": [
        {
          "value": "Summary of Results",
          "x": 0,
          "y": 2.5,
          "size": 32,
          "color": "#ffffff",
          "fadeIn": {"start": 0, "duration": 1}
        }
      ],
      "math": [
        {
          "latex": "\\textbf{(A) Work done:} \\quad W = 25 \\text{ J}",
          "x": 0,
          "y": 1,
          "color": "#00ff99",
          "targetHeight": 40,
          "fadeIn": {"start": 1, "duration": 1}
        },
        {
          "latex": "\\textbf{(B) Kinetic Energy Change:} \\quad \\Delta KE = 25 \\text{ J}",
          "x": 0,
          "y": -0.3,
          "color": "#00ff99",
          "targetHeight": 50,
          "fadeIn": {"start": 3, "duration": 1}
        },
        {
          "latex": "\\textbf{(C) Final Velocity:} \\quad v = 5 \\text{ m/s}",
          "x": 0,
          "y": -1.6,
          "color": "#00ff99",
          "targetHeight": 40,
          "fadeIn": {"start": 5, "duration": 1}
        }
      ]
    }
  ]
}